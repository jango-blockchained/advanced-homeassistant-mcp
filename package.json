    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.16",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@types/winston": "^2.4.4",
    "@types/ws": "^8.5.10",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "openai": "^4.82.0",
    "rimraf": "^5.0.10",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
