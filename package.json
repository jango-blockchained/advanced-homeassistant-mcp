    "@types/xmldom": "^0.1.34",
    "@xmldom/xmldom": "^0.9.7",
    "ajv": "^8.12.0",
    "chalk": "^5.4.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "litemcp": "^0.7.0",
    "uuid": "^9.0.1",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
